{
  "name": "clearnote-py-da",
  // üê≥ Imagen base de Dev Containers (incluye VS Code + Python)
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  // üìÇ Carpeta de trabajo dentro del contenedor
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  // ‚öôÔ∏è Personalizaciones adicionales
  "customizations": {
    "vscode": {
      "settings": {
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "jupyter.sendSelectionToInteractiveWindow": true,
        "workbench.iconTheme": "material-icon-theme"
      },
      "extensions": [
        "aaron-bond.better-comments",
        // "batisteo.vscode-django",
        "christian-kohler.path-intellisense",
        "github.copilot",
        "github.copilot-chat",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "njpwerner.autodocstring",
        "pkief.material-icon-theme",
        "ms-python.black-formatter"
      ]
    }
  },
  // üë§ Usuario por defecto en el contenedor
  "remoteUser": "root",
  // üêç Se instalan las librer√≠as requeridas para el proyecto
  "postCreateCommand": "pip install -r requirements.txt"
}